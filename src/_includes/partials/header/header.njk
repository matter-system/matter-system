<div class="flex bg-white border-b border-gray-200 fixed top-0 inset-x-0 z-200 h-16 items-center">
  <div class="px-8" style="width: 280px;">
    <div class="flex items-center">
      {% include 'partials/sidebar/logo.njk' %}
    </div>
  </div>

  <div x-data="{isSearchFocused: false}" class="flex flex-1">
    <div class="flex flex-row items-center border border-gray-400 rounded h-10 w-full text-gray-600 0 transition duration-200" :class="{'border-indigo-400 text-indigo-400': isSearchFocused}">
      <span class="px-4 flex h-full items-center justify-center">
        <svg height="15" viewbox="0 0 16 15" width="16" xmlns="http://www.w3.org/2000/svg" class="stroke-current">
          <g fill="none" fill-rule="evenodd" stroke-linecap="round" stroke-linejoin="round">
            <circle cx="5.5" cy="5.5" r="5"/>
            <path d="m14.571 14.5-5.571-5.5"/>
          </g>
        </svg>
      </span>

