{% set links = [
  {
    name: 'Buttons',
    path: '#buttons'
  }, {
    name: 'Icon Buttons',
    path: '#button-icon'
  }, {
    name: 'Grouped',
    path: '#button-grouped'
  }, {
    name: 'Checkbox Button',
    path: '#button-checkbox'
  }
] %}

<aside class="hidden xl:block sticky top-0 w-56 pt-4 pl-4">
  <div class="overflow-y-auto">
    <h2 class="mb-3 text-gray-500 uppercase tracking-wide font-bold text-xs">Variations</h2>
    <ul class="space-y-2">
      {% for link in links %}
        <li>
          {% if link.path ~ '/' === page.url %}
            <a href="{{ link.path }}" class="inline-block hover:text-indigo-700 transition duration-200 text-sm text-indigo-700 font-medium">
              {{ link.name }}
            </a>
          {% else %}
            <a href="{{ link.path }}" class="inline-block hover:text-indigo-700 transition duration-200 text-sm text-gray-600 font-medium">
              {{ link.name }}
            </a>
          {% endif %}
        </li>
      {% endfor %}
    </ul>
    <a class="flex flex-col bg-white border border-indigo-300 p-4 rounded mt-8 text-sm hover:bg-indigo-100  transition duration-200 text-indigo-600" href="#">
      <strong>Enjoying Matter?</strong>
      Consider sponsoring us ðŸ™Œ
    </a>
  </div>
</aside>